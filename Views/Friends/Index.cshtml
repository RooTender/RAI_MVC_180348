@model RAI_MVC_180348.Models.UserViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Friends</title>
</head>
<body>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label for="login" class="control-label">Username: </label>
                <input for="login" name="login" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add friend" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            Friend
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Friends)
    {
        <tr>
            <td>
                @item
            </td>
            <td>
                @Html.ActionLink("Delete", "Del", new { login = @item })
            </td>
        </tr>
    }
    </tbody>
</table>
@Html.ActionLink("Import friends", "Import")
<br/>
@Html.ActionLink("Export friends", "Export")
</body>
</html>
